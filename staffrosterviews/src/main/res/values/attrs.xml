<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RollerPicker">
        <attr name="Loop" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="NumberRollerPicker">
        <attr name="MinimumValue" format="integer" />
        <attr name="MaximumValue" format="integer" />
        <attr name="IncrementValue" format="integer" />
        <attr name="TextSize" format="dimension"/>
        <attr name="NumberFormat" format="string" />
    </declare-styleable>

    <declare-styleable name="TimeRollerPicker">
        <attr name="MinuteIncrementValue" format="integer" />
        <attr name="HourIncrementValue" format="integer" />
    </declare-styleable>

    <declare-styleable name="DetailRow">
        <attr name="Label" format="string"/>
    </declare-styleable>

</resources>