<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".MainActivity">

    <au.com.psilisoft.www.staffrosterviews.detailrows.ComboNumberRollerPickerDetailRow
        android:id="@+id/staff_shifts_combo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Shifts Required">

        <au.com.psilisoft.www.staffrosterviews.detailrows.NumberRollerPickerDetailRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Minimum"
            app:MinimumValue="0"
            app:MaximumValue="7"
            app:IncrementValue="1"
            app:Loop="false"/>

        <au.com.psilisoft.www.staffrosterviews.detailrows.NumberRollerPickerDetailRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Maximum"
            app:MinimumValue="0"
            app:MaximumValue="7"
            app:IncrementValue="1"
            app:Loop="false"/>

    </au.com.psilisoft.www.staffrosterviews.detailrows.ComboNumberRollerPickerDetailRow>

    <au.com.psilisoft.www.staffrosterviews.detailrows.ComboNumberRollerPickerDetailRow
        android:id="@+id/staff_hours_combo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Hours Required">

        <au.com.psilisoft.www.staffrosterviews.detailrows.NumberRollerPickerDetailRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Minimum"
            app:MinimumValue="0"
            app:MaximumValue="30"
            app:IncrementValue="1"
            app:Loop="false"/>

        <au.com.psilisoft.www.staffrosterviews.detailrows.NumberRollerPickerDetailRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Maximum"
            app:MinimumValue="0"
            app:MaximumValue="30"
            app:IncrementValue="1"
            app:Loop="false"/>

    </au.com.psilisoft.www.staffrosterviews.detailrows.ComboNumberRollerPickerDetailRow>

</LinearLayout>
